// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Country {
  id                Int      @id @default(autoincrement())
  name              String   @unique
  capital           String?
  region            String?
  population        Int
  currency_code     String?
  exchange_rate     Float?
  estimated_gdp     Float?
  flag_url          String?
  last_refreshed_at DateTime @default(now()) @updatedAt

  @@map("countries")
}
